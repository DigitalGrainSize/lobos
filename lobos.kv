<CameraWidget>:
    orientation: 'vertical'
    image: camera
    label: label
    txt_inpt: txt_inpt
    e_txt: e_txt
    n_txt: n_txt

    Camera:
        id: camera
        index: 0
        resolution: (1920,1080)

    BoxLayout:
        id: label
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'

        TextInput:
            id: e_txt
            text: 'Easting'
            multiline: False
            focus: False
            font_size: app.font_size0

        Button:
            text: 'St. Up'
            on_release: root.station_up()
            font_size: app.font_size1

        TextInput:
            id: txt_inpt
            text: '1'            focus: False
            on_text_validate: root.change_st()

        Button:
            text: 'Sand'
            on_press: root.TakePicture(app.fig,1)
            background_color: (1.0, 1.0, 0.0, 1.0)
            font_size: app.font_size2

        Button:
            text: 'Rock'
            on_press: root.TakePicture(app.fig,3)
            background_color: (1.0, 0.0, 0.0, 1.0)
            font_size: app.font_size2

        Button:
            text: 'Gravel'
            on_press: root.TakePicture(app.fig,2)
            background_color: (0.5, 0.5, 0.5, 1.0)
            font_size: app.font_size2

        Button:
            text: 'All off /MWF'
            on_press: root.SetMode(app.ser2,1)
            background_color: (0.3, 0.5, 0.7, 1.0)
            font_size: app.font_size

        Button:
            text: 'Lights/Lasers /MWF'
            on_press: root.SetMode(app.ser2,4)
            background_color: (0.3, 0.5, 0.7, 1.0)
            font_size: app.font_size0

        Button:
            text: 'LED /MACRO'
            on_press: root.SetMode(app.ser2,5)
            background_color: (0.7, 0.5, 0.3, 1.0)
            font_size: app.font_size

    BoxLayout:
        id: label
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'

        TextInput:
            id: n_txt
            text: 'Northing'
            multiline: False
            focus: False
            font_size: app.font_size0

        Button:
            text: 'St. Down'
            on_release: root.station_down()
            font_size: app.font_size1

        Button:
            text: 'Play/Pause'
            on_press: root.Play()
            font_size: app.font_size

        Button:
            text: 'Sand/Rock'
            on_press: root.TakePicture(app.fig,4)
            background_color: (1.0, 0.6, 0.0, 1.0)
            font_size: app.font_size

        Button:
            text: 'Gravel/Sand'
            on_press: root.TakePicture(app.fig,6)
            background_color: (0.7, 0.7, 0.1, 1.0)
            font_size: app.font_size

        Button:
            text: 'Sand/Gravel'
            on_press: root.TakePicture(app.fig,5)
            background_color: (0.75, 0.6, 0.8, 1.0)
            font_size: app.font_size

        Button:
            text: 'Lights /MWF'
            on_press: root.SetMode(app.ser2,2)
            background_color: (0.3, 0.5, 0.7, 1.0)
            font_size: app.font_size

        Button:
            text: 'Lasers /MWF'
            on_press: root.SetMode(app.ser2,3)
            background_color: (0.3, 0.5, 0.7, 1.0)
            font_size: app.font_size

        Button:
            text: 'Recal MACRO'
            on_press: root.SetMode(app.ser2,6)
            background_color: (0.7, 0.5, 0.3, 1.0)
            font_size: app.font_size0
